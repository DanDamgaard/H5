<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MobileApp.Pages.ProfilPage"
             Title="ProfilPage">
    
    <Grid RowDefinitions="*,*" Padding="25" RowSpacing="25" >

        <StackLayout Grid.Row="0" Spacing="25" VerticalOptions="Start">
            <Label Text="Profil" FontSize="30" FontAttributes="Bold" HorizontalOptions="Center"></Label>
            <Label x:Name="nameLabel" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"></Label>
            <Label x:Name="addressLabel" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"></Label>
            <Label x:Name="phoneLabel" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"></Label>
        </StackLayout>

        <Button Grid.Row="1" HeightRequest="50" x:Name="toUpdateProfilBtn" Clicked="toUpdateProfilBtn_Clicked" Text="Ret profil"></Button>




    </Grid>
</ContentPage>