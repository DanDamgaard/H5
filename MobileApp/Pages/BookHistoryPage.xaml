<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Pages.BookHistoryPage"
             Title="BookHistoryPage">
    <ScrollView>
        <VerticalStackLayout x:Name="BookStack" Padding="25" Spacing="25" HorizontalOptions="Center">
            <Image x:Name="bookImage"/>
            <Label x:Name="titelLabel" Text="Titel" HorizontalOptions="Center" TextDecorations="Underline"/>
            <Label x:Name="BookTitelLabel" HorizontalOptions="Center"/>
            <VerticalStackLayout >
                <HorizontalStackLayout x:Name="headerStack" Spacing="0" Padding="0"></HorizontalStackLayout>
                <VerticalStackLayout x:Name="tableStack"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
        
    </ScrollView>
</ContentPage>